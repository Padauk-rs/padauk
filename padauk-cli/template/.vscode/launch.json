{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Padauk Debug (Android)",
      "configurations": ["Padauk Run (Debug)", "Padauk Attach (Android LLDB)"],
      "stopAll": false
    }
  ],
  "configurations": [
    {
      "name": "Padauk Run (Debug)",
      "type": "lldb",
      "request": "launch",
      "program": "/opt/homebrew/bin/padauk",
      "args": ["run", "--debug", "--debug-port", "5039"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:${env:PATH}"
      },
      "noDebug": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Padauk Attach (Android LLDB)",
      "type": "lldb",
      "request": "custom",
      "noDebug": false,
      "preLaunchTask": "wait-lldb-port",
      "targetCreateCommands": [
        "target create ${workspaceFolder}/rust/target/aarch64-linux-android/debug/libpadauk.so",
        "settings set target.exec-search-paths ${workspaceFolder}/android/app/build/intermediates/merged_native_libs/debug/mergeDebugNativeLibs/out/lib/arm64-v8a"
      ],
      "processCreateCommands": [
        "gdb-remote localhost:5039",
        "gdb-remote localhost:5039",
        "gdb-remote localhost:5039",
        "process handle SIGSTOP -n true -p true -s false",
        "process handle SIGSEGV -n true -p true -s false",
        "process handle SIGBUS -n true -p true -s false",
        "process continue"
      ]
    }
  ]
}
